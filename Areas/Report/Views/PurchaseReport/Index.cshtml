                left: 40,
                right: 40,
                width: 800
            };
            var y = 20;
            doc.setLineWidth(2);
            doc.text(200, y = y + 30, "TOTAL NUMBER OF STOCKS");
            doc.autoTable({
                html: '#stockListTable',
                startY: 30,
                theme: 'grid',
                columnStyles: {
                    0: {
                        cellWidth: 100,
                    },
                    1: {
                        cellWidth: 100,
                    },
                    2: {
                        cellWidth: 100,
                    }
                },
                styles: {
                    minCellHeight: 10,
                    maxCellHeight:20,
                }
            })
            doc.save('stockListTable.pdf');
        }

