@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@using PhramacyApp.Areas.Master.Models
@model CategoryModel
<form id="create-form" method="post" asp-controller="category" asp-action="OnPostCreateOrEdit" asp-route-id="@Model.Id" onsubmit="return jQueryModalPost(this);">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group row">
                <label class="col-md-3 col-form-label">@localizer["Category Name"]</label>
                <div class="col-md-9">
                    <input type="text" asp-for="Category_Name" name="Category_Name" class="form-control">
                    <span asp-validation-for="Category_Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label">@localizer["Description"]</label>
                <div class="col-md-9">
                    <textarea rows="4" cols="50" asp-for="Description" name="Description" class="form-control">
        Description...</textarea>
                    @*<input type="text" asp-for="Description" name="Description" class="form-control">*@
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <div class="col-md-3">
                </div>
            </div>
        </div>
    </div>

    <div class="form-group justify-content-between" style="margin-bottom: 0px !important">
        <button type="submit" class="btn btn-success">Save</button>
        <button type="submit" class="btn btn-default close-button" data-dismiss="modal">Cancel</button>
    </div>
</form>
<script type="text/javascript" language=javascript>
    $.validator.unobtrusive.parse(document);
</script>
