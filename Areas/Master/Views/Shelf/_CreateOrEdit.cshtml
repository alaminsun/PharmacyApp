@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@using PhramacyApp.Areas.Master.Models
@model ShelfModel
<form id="create-form" method="post" asp-controller="Shelf" asp-action="OnPostCreateOrEdit" asp-route-id="@Model.Id" onsubmit="return jQueryModalPost(this);">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group row">
                <label class="col-md-3 col-form-label">@localizer["Shelf Name"]</label>
                <div class="col-md-9">
                    <input type="text" asp-for="Shelf_Name" name="Shelf_Name" class="form-control">
                    <span asp-validation-for="Shelf_Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label">@localizer["Shelf Number"]</label>
                <div class="col-md-9">
                    <input type="text" asp-for="Shelf_Number" name="Shelf_Number" class="form-control">
                    <span asp-validation-for="Shelf_Number" class="text-danger"></span>
                </div>
            </div>
